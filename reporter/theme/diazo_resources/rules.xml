<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <!-- Apply the following rules to standard Plone pages -->
    <rules css:if-content="#visual-portal-wrapper">

        <theme href="index.html" />

        <!-- Copy base tag from Plone -->
        <before css:theme-children="html head" css:content="html head base" />

        <!-- metadata -->
        <before css:theme-children="html head" css:content="html head meta" />

        <!-- logo -->
        <replace css:theme="div.nicdark_logo.nicdark_marginleft10 a"
                 css:content="a#portal-logo" />

        <!-- NAV main menu -->
        <replace css:theme="nav" css:content="nav" />



        <!-- 進入編輯畫面，不使用版型，並將二側drop -->
        <notheme if-path="++add++reporter.content.eventinfo" />
        <drop css:content="div#portal-column-one" if-path="++add++reporter.content.eventinfo" />
        <drop css:content="div#portal-column-two" if-path="++add++reporter.content.eventinfo" />



        <!-- Replace title with Plone's page title  -->
        <replace css:theme="html head title" css:content="html head title" />

        <replace css:theme-children="#plone_content" css:content-children="#content-core" />

    </rules>

</rules>



